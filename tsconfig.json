{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "composite": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react-jsx",
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "ts-node": { "transpileOnly": true }
}
