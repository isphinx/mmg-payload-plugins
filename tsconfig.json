{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "composite": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react",
    "paths": {
      "@/*": ["./src/*"],
      "@/lib/utils": ["./src/util/cn.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
